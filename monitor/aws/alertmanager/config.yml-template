global:
  resolve_timeout: 5m
  slack_api_url: ${SLACK_API_URL}

# The directory from which notification templates are read.
templates:
- '/etc/alertmanager/template/*.tmpl'

# to slack 
route:
-  group_by: ['alertname', 'job']
-  group_wait: 30s
-  group_interval: 5m
-  repeat_interval: 12h
  receiver: 'slack-webhook'


receivers:
- name: 'slack-webhook'
  slack_configs:
  - channel: '#alerts'
    send_resolved: true

